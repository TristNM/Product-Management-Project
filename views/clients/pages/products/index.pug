extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main    
    .container.my-3     
        .row 
            .col-12 
                +box-head("Products")
        .row  
            each item in products 
                .col-4.mb-3 
                    .product-item 
                        .inner-image  
                            img(src=item.thumbnail alt=item.title class='product-image')
                        .inner-content 
                            h3.product-title #{item.title}
                            p.product-description #{item.description}
                            p.product-price $#{item.price}
                            br
                            if item.stock > 0
                                button(type='button') Add to Cart
                            else
                                button(type='button' disabled) Out of Stock
