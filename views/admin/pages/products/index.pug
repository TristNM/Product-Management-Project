extends ../../layouts/default.pug

block main
    h1 Products 
    .card.mb-3 
         .card-body 
            each item in filterStatus
                button(
                    class= `btn btn-sml ml-1 btn-outline-success ${item.class}`
                    button-status = item.status
                ) #{item.name}
    .card.mb-3 
        .card-header
            h3 Product List
            .card-body 
                table.table.table-hover.table-sm 
                    thead
                        tr  
                            th Number
                            th Image 
                            th Title 
                            th Price
                            th Status 
                            th Actions
                    tbody
                        each product, index in products
                            tr 
                                td #{index + 1}
                                td 
                                    img(src=product.thumbnail alt=product.title style="width: 100px; height: 100px; object-fit: cover")
                                td #{product.title}   
                                td #{product.price}  
                                td 
                                    if(product.status === ("active"))
                                        span(class='badge badge-success') #{product.status}
                                    else 
                                        span(class='badge badge-danger') #{product.status}
                                td 
                                    button(class='btn btn-warning btn-sm ') Edit
                                    button(class='btn btn-danger btn-sm ml-1') Delete
    